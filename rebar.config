%-*-Mode:erlang;coding:utf-8;tab-width:4;c-basic-offset:4;indent-tabs-mode:()-*-
% ex: set ft=erlang fenc=utf-8 sts=4 ts=4 sw=4 et nomod:

{deps,
 [{folsom, ".*",
   {git, "https://github.com/boundary/folsom.git",
    {tag, "0.8.2"}}},
  {lager, ".*",
   {git, "https://github.com/basho/lager.git",
    {branch, "master"}}},
  {edown, ".*",
   {git, "https://github.com/uwiger/edown.git",
    {tag, "0.7"}}},
  {setup, ".*",
   {git, "https://github.com/okeuday/setup.git",
    {branch, "1.4"}}},
  {exometer, ".*",
   {git, "https://github.com/okeuday/exometer.git",
    {branch, "1.2.1"}}},
  {cloudi_core, ".*",
   {git, "https://github.com/CloudI/cloudi_core.git",
    {tag, "v1.6.0"}}}]}.

{erl_opts,
 [debug_info,
  warnings_as_errors,
  strict_validation,
  warn_bif_clash,
  warn_deprecated_function,
  warn_export_all,
  warn_export_vars,
  warn_exported_vars,
  warn_obsolete_guard,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_unused_record,
  warn_unused_vars]}.
{edoc_opts,
 [{preprocess, true}]}.
{xref_checks,
 [exports_not_used,
  undefined_function_calls]}.
{xref_warnings, true}.
{cover_enabled, true}.
{cover_print_enabled, true}.
{cover_export_enabled, true}.

